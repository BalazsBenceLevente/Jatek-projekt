                <ImageBrush 
                    ImageSource="/img/pages/start/Logo.png" 
                    Stretch="Uniform"/>
            </Label.Background>
        </Label>
        <Label
            Content="START"
            Name="laGameWindow"
            Grid.Column="3" 
            Grid.Row="3" 
            Grid.ColumnSpan="2" 
