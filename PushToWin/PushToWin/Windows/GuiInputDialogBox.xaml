<Window x:Class="PushToWin.Windows.GuiInputDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PushToWin.Windows"
        mc:Ignorable="d"
        Title="" Height="125" Width="320" ContentRendered="Window_ContentRendered" MaxHeight="125" MaxWidth="320" MinHeight="125" MinWidth="320">
    <StackPanel Margin="5,0,5,0">

        <Label Name="laQuestion">Test</Label>
        <TextBox Name="tbText" PreviewTextInput="NumbersOnly_PreviewTextInput"></TextBox>

        <WrapPanel HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" Width="60" Margin="0,0,8,0" Click="btnOk_Click">Ok</Button>
            <Button IsCancel="True" Width="60">Cancel</Button>
        </WrapPanel>
    </StackPanel>
</Window>
